{
  "name": "telegram-bot-template",
  "version": "1.0.0",
  "description": "Professional Telegram Bot Template with SQLite/Google Sheets support, dynamic sections, workflow engine, and multi-level permissions system",
  "main": "src/bot.js",
  "scripts": {
    "start": "node src/bot.js",
    "dev": "nodemon src/bot.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "setup": "node scripts/setup.script.js",
    "create:workflow": "node scripts/create-workflow.script.js",
    "create:section": "node scripts/create-section.script.js",
    "sync:db": "node scripts/sync-db.script.js",
    "backup": "node scripts/backup.script.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "telegraf",
    "sqlite",
    "google-sheets",
    "workflow",
    "permissions",
    "arabic",
    "template"
  ],
  "author": "Alsaada",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "telegraf": "^4.15.0",
    "sqlite3": "^5.1.7",
    "googleapis": "^126.0.1",
    "google-auth-library": "^9.4.1",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "joi": "^17.11.0",
    "date-fns": "^2.30.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "config",
      "sections",
      "workflows",
      "templates"
    ],
    "ext": "js,json",
    "ignore": [
      "tests",
      "data",
      "logs",
      "uploads",
      "node_modules"
    ]
  }
}
