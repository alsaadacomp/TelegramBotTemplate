# ========================================
# Telegram Bot Configuration
# ========================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username

# Super Admin Telegram ID (required)
SUPER_ADMIN_ID=123456789

# Additional Admin IDs (comma-separated, optional)
ADMIN_IDS=

# ========================================
# Database Configuration
# ========================================
# Mode: sqlite, sheets, or hybrid
DB_MODE=sqlite

# SQLite Configuration
SQLITE_PATH=./data/database/bot.db
SQLITE_BACKUP_ENABLED=true

# ========================================
# Google Sheets Configuration
# ========================================
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SPREADSHEET_ID=
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=

# Auto Sync Settings
AUTO_SYNC_ENABLED=false
AUTO_SYNC_INTERVAL=300000

# ========================================
# Cache Configuration
# ========================================
CACHE_ENABLED=true

# Cache TTL (seconds)
CACHE_TTL_USERS=3600
CACHE_TTL_SECTIONS=7200
CACHE_TTL_SHEETS_DATA=1800
CACHE_TTL_CONVERSATIONS=900
CACHE_TTL_SETTINGS=0

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Log Rotation
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# ========================================
# Security Configuration
# ========================================
# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS_USER=20
RATE_LIMIT_MAX_REQUESTS_ADMIN=60

# Session Security
SESSION_SECRET=change_this_to_random_string
SESSION_TTL=86400000

# ========================================
# File Upload Configuration
# ========================================
# Max file size in bytes (5MB default)
MAX_FILE_SIZE=5242880

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/csv

# Upload directory
UPLOAD_DIR=./uploads

# Auto cleanup (delete files older than X days)
AUTO_CLEANUP_ENABLED=true
AUTO_CLEANUP_DAYS=7

# ========================================
# Excel Export Configuration
# ========================================
EXCEL_DEFAULT_SHEET_NAME=Data
EXCEL_AUTHOR=Telegram Bot
EXCEL_COMPRESSION=true

# ========================================
# Backup Configuration
# ========================================
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7
BACKUP_DIRECTORY=./data/backups

# ========================================
# Application Settings
# ========================================
NODE_ENV=development
PORT=3000
TIMEZONE=Asia/Riyadh

# Language Settings
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar

# ========================================
# Performance Settings
# ========================================
# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=30000

# Request timeout (ms)
REQUEST_TIMEOUT=30000

# ========================================
# Feature Flags
# ========================================
FEATURE_WORKFLOWS_ENABLED=true
FEATURE_SECTIONS_ENABLED=true
FEATURE_EXCEL_EXPORT_ENABLED=true
FEATURE_GOOGLE_SHEETS_ENABLED=false
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=false

# ========================================
# Development Settings
# ========================================
DEBUG=false
VERBOSE_LOGGING=false
SKIP_PERMISSION_CHECK=false

# ========================================
# Webhook Settings (optional)
# ========================================
USE_WEBHOOK=false
WEBHOOK_DOMAIN=
WEBHOOK_PORT=8443
WEBHOOK_PATH=/webhook

# ========================================
# Notification Settings
# ========================================
NOTIFY_ADMINS_ON_ERROR=true
NOTIFY_ADMINS_ON_NEW_USER=false
NOTIFY_ADMINS_ON_CRITICAL=true

# ========================================
# Custom Settings
# ========================================
# Add your custom environment variables below
# CUSTOM_SETTING=value
