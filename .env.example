# ====================================
# BOT CONFIGURATION
# ====================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username

# ====================================
# ADMIN CONFIGURATION
# ====================================
SUPER_ADMIN_ID=123456789

# ====================================
# DATABASE CONFIGURATION
# ====================================
# Mode: sqlite | sheets | hybrid
DB_MODE=sqlite

# SQLite Configuration
SQLITE_PATH=./data/database/bot.db

# Google Sheets Configuration
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SPREADSHEET_ID=
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=

# Database Sync (for hybrid mode)
AUTO_SYNC_ENABLED=false
SYNC_INTERVAL=300000

# ====================================
# CACHE CONFIGURATION
# ====================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_TTL_USERS=3600
CACHE_TTL_SECTIONS=7200
CACHE_TTL_SHEETS_DATA=1800
CACHE_TTL_CONVERSATIONS=900
CACHE_TTL_SETTINGS=0

# ====================================
# LOGGING CONFIGURATION
# ====================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_MAX_FILES=30
LOG_MAX_SIZE=20971520

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# ====================================
# SECURITY CONFIGURATION
# ====================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=100

# ====================================
# FILE UPLOAD CONFIGURATION
# ====================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# ====================================
# BACKUP CONFIGURATION
# ====================================
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7

# ====================================
# LANGUAGE CONFIGURATION
# ====================================
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en

# ====================================
# TIMEZONE
# ====================================
TIMEZONE=Africa/Cairo

# ====================================
# NODE ENVIRONMENT
# ====================================
NODE_ENV=development
